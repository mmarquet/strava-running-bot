{
  "name": "strava-running-bot",
  "version": "1.0.0",
  "description": "Discord bot that displays Strava activities from running team members",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "db:generate": "drizzle-kit generate:sqlite",
    "db:migrate": "node src/database/migrate.js",
    "db:studio": "drizzle-kit studio",
    "tokens:refresh": "node scripts/refresh-expired-tokens.js",
    "sonar:report": "node -r dotenv/config scripts/sonar-api.mjs report"
  },
  "keywords": [
    "discord",
    "bot",
    "strava",
    "running",
    "fitness"
  ],
  "author": "Mat",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.13.2",
    "better-sqlite3": "^12.4.1",
    "chalk": "^4.1.2",
    "discord.js": "^14.24.2",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "express": "^5.1.0",
    "node-cron": "^4.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "nock": "^14.0.0",
    "nodemon": "^3.1.11",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=24.0.0"
  }
}
